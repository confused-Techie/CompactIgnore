{
  "root": true,
  "env": {
    "node": true
  },
  "extends": ["eslint:recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "script"
  },
  "rules": {
    "eqeqeq": "off",
    "no-use-before-define": "off",
    "quotes": ["error", "double"],
    "arrow-parens": "off",
    "no-console": "off",
    "arrow-spacing": "error",
    "block-scoped-var": "error",
    "complexity": ["error", 15]
  },
  "reportUnusedDisableDirectives": true,
  "globals": {
    "Promise": "readonly",
    "test": "readonly",
    "expect": "readonly"
  }
}
